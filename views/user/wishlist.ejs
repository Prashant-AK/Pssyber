<div class="ttr-opened-sidebar ttr-pinned-sidebar">
    
    <%- include('../partials/user/user_sidebar'); -%>

<!--Main container start -->
	<main class="ttr-wrapper" style="padding-top: 20px;">
		<div class="container-fluid">
			<div class="db-breadcrumb">
				<h4 class="breadcrumb-title">WishList</h4>
				<ul class="db-breadcrumb-list">
					<li><a href="/home"><i class="fa fa-home"></i>Home</a></li>
					<li>WishList</li>
				</ul>
			</div>
			<div class="row">
				<!-- Your Profile Views Chart -->
				<div class="col-lg-12 m-b30">
					<div class="widget-box">
						<div class="wc-title">
							<%if(course.length<=0 || course.length===undefined){%>
							<p style="opacity:0.5">No courses to show</p>
							<%}%>
						</div>
						<%course.forEach((item)=>{%>
							<div class="widget-inner">
								<div class="card-courses-list bookmarks-bx">
									<div class="card-courses-media" style="width: 300px; height: 200px;" >
										<img src="<%=item.thumbnail%>" alt="<%=item.title%>" style="object-fit: contain; object-position: center;" />
									</div>
									<div class="card-courses-full-dec">
										<div class="card-courses-title">
											<h4 class="m-b5"><%=item.title%></h4>
										</div>
										<div class="card-courses-list-bx">
											<ul class="card-courses-view">
												<li class="card-courses-categories">
													<h5>Category</h5>
													<h4><%=item.category%></h4>
												</li>
												<li class="card-courses-review">
													<h5>3 Review</h5>
													<ul class="cours-star">
														<li class="active"><i class="fa fa-star"></i></li>
														<li class="active"><i class="fa fa-star"></i></li>
														<li class="active"><i class="fa fa-star"></i></li>
														<li><i class="fa fa-star"></i></li>
														<li><i class="fa fa-star"></i></li>
													</ul>
												</li>
												<li class="card-courses-price">
													<del>&#8377;<%=item.price%></del>
													<h5 class="text-primary m-b0">
														&#8377;<%=Math.floor(item.price - (item.discount / 100) * item.price)%>
													</h5>
												</li>
											</ul>
										</div>
										<div class="row card-courses-dec">
											<div class="col-md-12">
												<p><%=(item.description).substring(0,170)+'...'%></p>
											</div>
											<div class="col-md-12">
												<a href="/courses/<%=(item.title).toLowerCase().replace(/ /g,'-')%>/<%=item._id%>" class="btn radius-xl">View Courses</a>
												<a href="#" class="btn red outline radius-xl ">Remove</a>
											</div>
										</div>

									</div>
								</div>

							</div>
							<%})%>
						</div>
					</div>
					<!-- Your Profile Views Chart END-->
				</div>
			</div>
	</main>
	<div class="ttr-overlay"></div>
</div>