	<!--Main container start -->
	<main class="ttr-wrapper">
		<div class="container-fluid">
			<div class="db-breadcrumb">
				<h4 class="breadcrumb-title">Add Course</h4>
				<ul class="db-breadcrumb-list">
					<li><a href="#"><i class="fa fa-home"></i>Home</a></li>
					<li>Add Course</li>
				</ul>
			</div>
			<div class="row">
				<!-- Your Profile Views Chart -->
				<div class="col-lg-12 m-b30">
					<div class="widget-box">
						<div class="widget-inner">
							<form class="edit-profile m-b30" method="POST" action="/admin/add-course"
								enctype="multipart/form-data">
								<div class="row">
									<!-- Level 1: Basic Info -->
									<div class="col-12">
										<div class="ml-auto">
											<h3>1. Basic info</h3>
										</div>
									</div>
									<div class="form-group col-6">
										<label class="col-form-label">Course title</label>
										<div>
											<input class="form-control" type="text" value="" name="title">
										</div>
									</div>
									<div class="form-group col-6">
										<label class="col-form-label">Instructor name</label>
										<div>
											<input class="form-control" type="text" value="" name="instructor">
										</div>
									</div>
									<div class="form-group col-3">
										<label class="col-form-label">Price (in Rs)</label>
										<div>
											<input class="form-control" type="number" value="" name="price">
										</div>
									</div>
									<div class="form-group col-3">
										<label class="col-form-label">Discount in percentage (If Any)</label>
										<div>
											<input class="form-control" type="number" value="0" name="discount" min="0">
										</div>
									</div>
									<div class="form-group col-6">
										<label class="col-form-label">Category</label>
										<div>
											<select id="course_categroy" name="category">
												<option>Select a category</option>
												<option>Academics</option>
												<option>Science and Technology</option>
												<option>Finance and Accounting</option>
												<option>Development and Programming</option>
												<option>IT and Software</option>
												<option>Design</option>
												<option>Marketing</option>
												<option>Photography</option>
												<!-- ssdad -->
											</select>
										</div>
									</div>
									<div class="form-group col-6">
										<label class="col-form-label">Course Level</label>
										<div>
											<select id="course_levels" name="level">
												<option>Beginner</option>
												<option>Intermidiate</option>
												<option>Advanced</option>
											</select>
										</div>
									</div>
									<div class="form-group col-6">
										<label class="col-form-label">Language</label>
										<div>
											<input class="form-control" type="text" value="" name="language">
										</div>
									</div>

									<div class="seperator"></div>

									<!-- Level 2: About the course -->
									<div class="col-12 m-t20">
										<div class="ml-auto">
											<h3 class="m-form__section">2. About </h3>
										</div>
									</div>
									<!-- Pre Requisite and Course Outcome-->
									<div class="form-group col-6">
										<label class="col-form-label">Prerequisites (If Any)</label>
										<div>
											<textarea class="form-control" name="prereq"> </textarea>
										</div>
									</div>
									<div class="form-group col-6">
										<label class="col-form-label">Outcome</label>
										<div>
											<textarea class="form-control" name="outcome"> </textarea>
										</div>
									</div>
									<!-- Detailed Description -->
									<div class="col-12 m-t20">
										<div class="ml-auto m-b5">
											<h3>3. Description of the course</h3>
										</div>
									</div>
									<div class="form-group col-12">
										<label class="col-form-label">Course description</label>
										<div>
											<textarea class="form-control" name="description"> </textarea>
										</div>
									</div>
									<div class="col-12 m-t20">
										<div class="ml-auto">
											<h3 class="m-form__section">4. Design Course Contents</h3>
										</div>
									</div>
									<!-- THumbnail -->
									<div class="form-group col-12">
										<label class="col-form-label">Course Thumbnail</label>
										<div>
											<input class="form-control" type="file" name="thumbnail">
										</div>
									</div>

									<div class="col-12">
										<table id="item-add" style="width:100%;">
											<tr class="list-item">
												<td>
													<div class="row">
														<div class="col-md-4">
															<label class="col-form-label">Section Name</label>
															<div>
																<input class="form-control" type="text" value=""
																	name="sectionName">
															</div>
														</div>
														<div class="col-md-3">
															<label class="col-form-label">Video title</label>
															<div>
																<input class="form-control" type="text" value=""
																	name="sectionVideoText">
															</div>
														</div>
														<div class="col-md-3">
															<label class="col-form-label">Upload Video</label>
															<div>
																<input class="form-control" type="file" value=""
																	name="sectionFile">
															</div>
														</div>
														<div class="col-md-2">
															<label class="col-form-label">Close</label>
															<div class="form-group">
																<a class="delete" href="#"><i
																		class="fa fa-close"></i></a>
															</div>
														</div>
													</div>
												</td>
											</tr>
										</table>
									</div>
									<div class="col-12">
										<button type="button" class="btn-secondry add-item m-r5"><i
												class="fa fa-fw fa-plus-circle"></i>Add Item</button>
										<button type="submit" class="btn">Create Course</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				<!-- Your Profile Views Chart END-->
			</div>
		</div>
	</main>
	<div class="ttr-overlay"></div>
