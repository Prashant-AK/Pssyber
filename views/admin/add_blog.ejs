
	<!--Main container start -->
	<main class="ttr-wrapper">
		<div class="container-fluid">
			<div class="db-breadcrumb">
				<h4 class="breadcrumb-title">Add Blog</h4>
				<ul class="db-breadcrumb-list">
					<li><a href="#"><i class="fa fa-home"></i>Home</a></li>
					<li>Add Blog</li>
				</ul>
			</div>
			<div class="row">
				<!-- Your Profile Views Chart -->
				<div class="col-lg-12 m-b30">
					<div class="widget-box">
						<div class="widget-inner">
							<form class="edit-profile m-b30" action="/admin/add-blog" method="POST" type="file"
								enctype="multipart/form-data">
								<div class="row">
									<div class="form-group col-6">
										<label class="col-form-label">Blog title</label>
										<div>
											<input class="form-control" type="text" value="" name="blogTitle" required>
										</div>
									</div>

									<div class="form-group col-6">
										<label class="col-form-label">Author Name</label>
										<div>
											<input class="form-control" type="text" value="" name="blogAuthor" required>
										</div>
									</div>
									<div class="seperator"></div>

									<div class="form-group col-12">
										<span class="col-form-label">Insert Blog image</span>
										<div class="col-form-label"><%= typeof msg != 'undefined' ? msg: '' %></div>
										<input class="form-control" name="blogImage" type="file" required>
									</div>

									<div class="form-group col-12">
										<label class="col-form-label">Blog Content</label>
										<div>
											<textarea class="form-control" name="blogContent"> </textarea>
										</div>
									</div>

									<div class="form-group col-6">
										<label class="col-form-label">Tags</label>
										<div>
											<input class="form-control" type="text" value="" name="blogTags" placeholder="Separeate Each Tags with a space">
										</div>
									</div>

									<div class="col-12">
										<button type="submit" class="btn-secondry add-item m-r5"><i
												class="fa fa-fw fa-plus-circle"></i>&nbsp;Publish</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				<!-- Your Profile Views Chart END-->
			</div>
		</div>
	</main>
	<div class="ttr-overlay"></div>
